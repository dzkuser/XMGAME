<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Test Supersocket</title>

</head>
<body>
    <textarea id="txaMsg" style="height: 500px; width: 300px;"></textarea>
    <input type="button" id="send" value="发送">
    <input type="text" id="txtMsg">

    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/SuperSocket.js"></script>
    <script type="text/javascript">
        var s = $.MySuperSocket;
        s.openSocket(open, close, message, erro);
        var el = $("#txtMsg");
        function open(e) {
            alert("xxxx");
            el.val(el.val() + "连接成功！\r\n");
            var entity = {
                "FromUser": "2",
                "Tag":"c"
            }
            s.sendMessage(entity);
        }
         function close (e) {
            el.val(el.val() + "连接断开！\r\n");
        }
         function message(e) {
             console.log(e);
        }
         function erro (e) {
            el.val(el.val() + "连接失败！原因【" + e.data + "】\r\n");
        }
       

        $("#send").click(function () {

            var entity = {
                "FromUser": "2",
                "Tag": "m",
                "ToUser": "1",
                "Message":"dzk"
            }
            alert("xxxxx")
            s.sendMessage(entity);

        });
    </script>
</body>
</html>



